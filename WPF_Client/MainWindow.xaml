                                                <TextBlock Margin="10" x:Name="carupdateResponse" Text="" Grid.Row="2" Style="{StaticResource MaterialDesignHelperTextBlock}"/>
                                            </Grid>
                                        </TabItem>
                                        <TabItem>
                                            <TabItem.Header>
                                                <StackPanel>
                                                    <TextBlock Text="Delete"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                        </TabItem>
                                    </TabControl>
                                </TabItem>
                                <!--Car Operations-->
                                <TabItem>
                                    <TabItem.Header>
                                        <StackPanel>
                                            <TextBlock Text="Parts"/>
                                        </StackPanel>
                                    </TabItem.Header>
                                    <TabControl TabStripPlacement="Left">
                                        <TabItem>
                                            <TabItem.Header>
                                                <StackPanel>
                                                    <TextBlock Text="Create"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                        </TabItem>
                                        <TabItem>
                                            <TabItem.Header>
                                                <StackPanel>
