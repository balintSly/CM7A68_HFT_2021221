                                <!--Part Operations-->
                                <TabItem>
                                    <TabItem.Header>
                                        <StackPanel>
                                            <TextBlock Text="Special Queries"/>
                                        </StackPanel>
                                    </TabItem.Header>
                                    <TabControl x:Name="specials" SelectionChanged="specials_SelectionChanged" TabStripPlacement="Left">
                                        <TabItem x:Name="special1">
                                            <TabItem.Header>
                                                <StackPanel>
                                                    <TextBlock Text="Brembo spare part user brands"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                            <Grid MaxHeight="500" MaxWidth="200">
                                                <ListView Margin="10" Name="lvDataBinding" 
                                                          ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" VerticalContentAlignment="Top" >
                                                    <ListView.View>
                                                        <GridView>
                                                            <GridViewColumn Header="Brand" DisplayMemberBinding="{Binding}" Width="100"/>
                                                        </GridView>
                                                    </ListView.View>
                                                </ListView>
                                            </Grid>
                                        </TabItem>
                                        <TabItem x:Name="special2">
                                            <TabItem.Header>
                                                <StackPanel>
                                                    <TextBlock Text="Brands with electric cars"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                            <Grid MaxHeight="500" MaxWidth="200">
                                                <ListView Margin="10" Name="lvDataBinding2" 
                                                          ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" VerticalContentAlignment="Top" >
                                                    <ListView.View>
                                                        <GridView>
                                                            <GridViewColumn Header="Brand" DisplayMemberBinding="{Binding}" Width="100"/>
                                                        </GridView>
                                                    </ListView.View>
                                                </ListView>
                                            </Grid>
                                        </TabItem>
                                        <TabItem x:Name="special3">
                                            <TabItem.Header>
                                                <StackPanel>
                                                    <TextBlock Text="Brand with the most 4 cylinder cars"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <ListView Margin="10" Name="lvDataBinding3"></ListView>
                                            </Grid>
                                        </TabItem>
                                        <TabItem x:Name="special4">
                                            <TabItem.Header>
                                                <StackPanel>
                                                    <TextBlock Text="Cars with the most compatible parts"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                            <Grid MaxHeight="500" MaxWidth="600">
                                                <ListView Margin="10" Name="lvDataBinding4" Grid.Row="1" 
                                                          ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" VerticalContentAlignment="Top" >
                                                    <ListView.View>
                                                        <GridView>
