                                                          BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                          Grid.Row="0"
                                                          SelectionChanged="carIds_SelectionChanged"/>
                                                <Grid MaxHeight="500" Grid.Row="1">
                                                    <ListView Margin="10" Name="readedCar" Grid.Row="1" VerticalContentAlignment="Top" >
                                                        <ListView.View>
                                                            <GridView>
                                                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="100"/>
                                                                <GridViewColumn Header="Brand" DisplayMemberBinding="{Binding Brand}" Width="100"/>
                                                                <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" Width="200"/>
                                                                <GridViewColumn Header="Production year" DisplayMemberBinding="{Binding Production_year}" Width="200"/>
                                                                <GridViewColumn Header="Cylinder number" DisplayMemberBinding="{Binding Cylinder_number}" Width="200"/>
                                                                <GridViewColumn Header="Cylinder capacity" DisplayMemberBinding="{Binding Cylinder_capacity}" Width="200"/>
                                                            </GridView>
                                                        </ListView.View>
                                                    </ListView>
                                                </Grid>
                                            </Grid>
                                        </TabItem>
                                        <TabItem x:Name="readAllCar">
                                            <TabItem.Header>
                                                <StackPanel>
                                                    <TextBlock Text="ReadAll"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                            <Grid MaxHeight="500">
                                                <ListView Margin="10" Name="readedAllCar" VerticalContentAlignment="Top" >
                                                        <ListView.View>
                                                            <GridView>
                                                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="100"/>
                                                                <GridViewColumn Header="Brand" DisplayMemberBinding="{Binding Brand}" Width="100"/>
                                                                <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" Width="200"/>
                                                                <GridViewColumn Header="Production year" DisplayMemberBinding="{Binding Production_year}" Width="200"/>
                                                                <GridViewColumn Header="Cylinder number" DisplayMemberBinding="{Binding Cylinder_number}" Width="200"/>
                                                                <GridViewColumn Header="Cylinder capacity" DisplayMemberBinding="{Binding Cylinder_capacity}" Width="200"/>
                                                            </GridView>
                                                        </ListView.View>
                                                    </ListView>
                                            </Grid>
                                        </TabItem>
                                        <TabItem x:Name="updateCar">
                                            <TabItem.Header>
                                                <StackPanel>
                                                    <TextBlock Text="Update"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                            <Grid MaxHeight="500">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <ListView Margin="10" Name="updateAllCar" Grid.Row="0" 
                                                          ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" VerticalContentAlignment="Top" >
                                                    <ListView.View>
                                                        <GridView>
                                                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="100"/>
                                                            <GridViewColumn Header="Brand" DisplayMemberBinding="{Binding Brand}" Width="100"/>
                                                            <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" Width="200"/>
                                                            <GridViewColumn Header="Production year" DisplayMemberBinding="{Binding Production_year}" Width="200"/>
                                                            <GridViewColumn Header="Cylinder number" DisplayMemberBinding="{Binding Cylinder_number}" Width="200"/>
                                                            <GridViewColumn Header="Cylinder capacity" DisplayMemberBinding="{Binding Cylinder_capacity}" Width="200"/>
                                                        </GridView>
                                                    </ListView.View>
                                                </ListView>
                                                
                                                <StackPanel Orientation="Horizontal" Grid.Row="1">
                                                    <ComboBox x:Name="updateCarID" SelectionChanged="updateCarID_SelectionChanged" Margin="10" materialDesign:HintAssist.Hint="Choose the ID" 
                                                          HorizontalAlignment="Left" BorderThickness="2" 
                                                          BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                                                    
                                                    <StackPanel Orientation="Horizontal" Visibility="Hidden" x:Name="carUpdateStack">
                                                        <ComboBox x:Name="updateCarBrand" Margin="10" materialDesign:HintAssist.Hint="Brand" 
                                                          HorizontalAlignment="Left" BorderThickness="2" 
                                                          BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                                                        <TextBox x:Name="updateCarModel" Margin="10" materialDesign:HintAssist.Hint="Model" 
                                                         BorderThickness="2" BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                         Height="50"/>
                                                        <ComboBox x:Name="updateCarProd" Margin="10" materialDesign:HintAssist.Hint="Production year" 
                                                          HorizontalAlignment="Left" BorderThickness="2" 
                                                          BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                                                        <ComboBox x:Name="updateCarCylNum" Margin="10" materialDesign:HintAssist.Hint="Cylinder number" 
                                                          HorizontalAlignment="Left" BorderThickness="2" 
                                                          BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                                  SelectionChanged="updateCarCylNum_SelectionChanged"/>
                                                        <ComboBox x:Name="updateCarCylCap" Margin="10" materialDesign:HintAssist.Hint="Cylinder capacity" 
                                                          HorizontalAlignment="Left" BorderThickness="2" 
                                                          BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                          Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                                                                  SelectionChanged="updateCarCylCap_SelectionChanged" />
                                                        <Button x:Name="updateCarBtn" Click="updateCarBtn_Click" Content="Update" Margin="10"
                                                        BorderThickness="6" 
                                                        Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"/>
                                                    </StackPanel>
                                                   
                                                </StackPanel>
