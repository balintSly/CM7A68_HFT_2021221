                                                <Grid Grid.Row="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <ComboBox x:Name="deletebrandID" Margin="10" materialDesign:HintAssist.Hint="Choose the ID" 
                                                          HorizontalAlignment="Left" BorderThickness="2" 
                                                          BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                          Grid.Column="0"/>
                                                    <Button x:Name="deleteBrandBtn" Click="deleteBrandBtn_Click" Grid.Column="2" Content="Delete" Margin="10"
                                                        BorderThickness="2" 
                                                        Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"/>
                                                </Grid>
                                                <TextBlock Margin="10" x:Name="branddeleteResponse" Text="" Grid.Row="2" Style="{StaticResource MaterialDesignHelperTextBlock}"/>
                                            </Grid>
                                        </TabItem>
                                    </TabControl>
                                </TabItem>
                                <!--Brand Operations-->
                                <TabItem>
                                    <TabItem.Header>
                                        <StackPanel>
                                            <TextBlock Text="Cars"/>
                                        </StackPanel>
                                    </TabItem.Header>
                                    <TabControl TabStripPlacement="Left" SelectionChanged="cars_SelectionChanged">
                                        <TabItem x:Name="carCreate">
                                            <TabItem.Header>
                                                <StackPanel>
                                                    <TextBlock Text="Create"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid Grid.Row="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="2*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>
                                                        <TextBox x:Name="carModel" Margin="10" materialDesign:HintAssist.Hint="Model of the car" 
                                                         BorderThickness="2" BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                         Grid.Row="0" Grid.Column="0" Height="50"/>
                                                        <ComboBox  x:Name="yearsBox" Margin="10" Grid.Row="1" materialDesign:HintAssist.Hint="Production year"
                                                                    BorderThickness="2" BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                         Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectedIndex="0">
                                                        </ComboBox>
                                                        <ComboBox  x:Name="cilnumBox" Margin="10" Grid.Row="2" materialDesign:HintAssist.Hint="Cylinder number"
                                                                    BorderThickness="2" BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                         Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectedIndex="13">
                                                        </ComboBox>
                                                        <ComboBox  x:Name="cilcapBox" Margin="10" Grid.Row="3" materialDesign:HintAssist.Hint="Cylinder capacity"
                                                                    BorderThickness="2" BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                         Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectedIndex="65">
                                                        </ComboBox>
                                                        <ComboBox  x:Name="brandnameBox" Margin="10" Grid.Row="4" materialDesign:HintAssist.Hint="Brand"
                                                                    BorderThickness="2" BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                         Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectedIndex="0">
                                                        </ComboBox>
                                                    </Grid>
                                                    <Button x:Name="createCarBtn" Click="createCarBtn_Click" Grid.Column="1" Content="Create" Margin="10"
                                                        BorderThickness="2" 
                                                        Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"/>
                                                </Grid>
                                                <TextBlock Margin="10" x:Name="carCreateResponse" Text="" Grid.Row="1" Style="{StaticResource MaterialDesignHelperTextBlock}"/>
                                            </Grid>
                                        </TabItem>
                                        <TabItem x:Name="carRead">
